{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["es2023"],
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    // Needed because of https://github.com/dcodeIO/long.js/issues/109.
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "files": ["index.ts"]
}
